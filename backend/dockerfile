# Use a small Python base
FROM python:3.12-slim

# Ensures nice logs and no pip cache bloat
ENV PYTHONUNBUFFERED=1 \
    PIP_NO_CACHE_DIR=1

# Workdir
WORKDIR /app

# System deps (add build tools if you need them later)
RUN apt-get update && apt-get install -y --no-install-recommends \
    curl ca-certificates && \
    rm -rf /var/lib/apt/lists/*

# Install Python deps first (better layer caching)
COPY requirements.txt .
RUN pip install -r requirements.txt

# Copy app code
COPY . .

# Pre-download & bake the ONNX MiniLM model into the image layer
RUN python cache_models.py

# Expose Flask port
EXPOSE 5000

# Use Gunicorn for production instead of Flask dev server
CMD ["gunicorn", "-b", "0.0.0.0:5000", "main:app"]
